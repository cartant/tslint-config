{
  "defaultSeverity": "error",
  "jsRules": {},
  "rules": {
    "adjacent-overload-signatures": { "severity": "error" },
    "array-type": {
      "options": ["array"],
      "severity": "error"
    },
    "class-name": { "severity": "error" },
    "curly": { "severity": "error" },
    "deprecation": { "severity": "warning" },
    "forin": { "severity": "error" },
    "label-position": { "severity": "error" },
    "linebreak-style": {
      "options": ["LF"],
      "severity": "error"
    },
    "member-ordering": {
      "options": {
        "order": [
          "static-field",
          "static-method",
          "instance-field",
          "constructor",
          "instance-method"
        ]
      },
      "severity": "error"
    },
    "new-parens": { "severity": "error" },
    "no-arg": { "severity": "error" },
    "no-bitwise": { "severity": "error" },
    "no-conditional-assignment": { "severity": "error" },
    "no-console": {
      "options": [
        "error",
        "log",
        "warn"
      ],
      "severity": "warning"
    },
    "no-construct": { "severity": "error" },
    "no-debugger": { "severity": "error" },
    "no-duplicate-super": { "severity": "error" },
    "no-duplicate-variable": { "severity": "error" },
    "no-eval": { "severity": "error" },
    "no-invalid-template-strings": { "severity": "error" },
    "no-invalid-this": { "severity": "error" },
    "no-mergeable-namespace": { "severity": "error" },
    "no-namespace": {
      "options": ["allow-declarations"],
      "severity": "error"
    },
    "no-reference": { "severity": "error" },
    "no-reference-import": { "severity": "error" },
    "no-sparse-arrays": { "severity": "error" },
    "no-switch-case-fall-through": { "severity": "error" },
    "no-unsafe-finally": { "severity": "error" },
    "no-unused-expression": { "severity": "error" },
    "no-var-keyword": { "severity": "error" },
    "no-void-expression": {
      "options": ["ignore-arrow-function-shorthand"],
      "severity": "error"
    },
    "object-literal-sort-keys": { "severity": "error" },
    "one-line": {
      "options": [
        "check-catch",
        "check-else",
        "check-open-brace",
        "check-whitespace"
      ],
      "severity": "error"
    },
    "one-variable-per-declaration": {
      "options": ["ignore-for-loop"],
      "severity": "error"
    },
    "ordered-imports": {
      "options": [{
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive"
      }],
      "severity": "warning"
    },
    "prefer-template": { "severity": "warning" },
    "radix": { "severity": "error" },
    "return-undefined": { "severity": "error" },
    "switch-default": { "severity": "error" },
    "triple-equals": {
      "options": ["allow-null-check"],
      "severity": "error"
    },
    "typedef": {
      "options": [
        "call-signature",
        "parameter",
        "property-declaration"
      ],
      "severity": "error"
    },
    "use-isnan": { "severity": "error" },
    "variable-name": {
      "options": [
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case",
        "allow-trailing-underscore"
      ],
      "severity": "error"
    }
  }
}
